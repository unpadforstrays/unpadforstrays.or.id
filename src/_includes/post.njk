---
layout: 'base.njk'
---
<!-- Hero Title & excerpt (pake h3) -->
<div class="md:mx-3 mt-20 my-4 md:mt-20 p-5 md:px-14 bg-[#eeeeee] md:rounded-xl">
    <h1 class="text-gray-700 font-bold tracking-wider leading-[2.5rem] md:leading-[4rem] text-4xl md:text-6xl">{{ title }}</h1>
    <!-- date & writer bikin flex -->
    <div class="my-3 flex gap-y-1 flex-row gap-2 items-center">
      <h5 class="text-xs md:text-sm text-gray-500">{{ date | postDate }}</h5>
      <h5 class="text-gray-500">â€§</h5>
      <div class="flex gap-x-1 items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="17" height="auto" viewBox="0 0 24 24">
          <path fill="#6b6b6b" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4s-4 1.79-4 4s1.79 4 4 4m0 2c-2.67 0-8 1.34-8 4v1c0 .55.45 1 1 1h14c.55 0 1-.45 1-1v-1c0-2.66-5.33-4-8-4" />
        </svg>
        <h5 class="text-xs md:text-sm text-gray-500">{{ writer }}</h5>
      </div>
      <div id="sharer" class="cursor-pointer flex items-center gap-1 ml-7 md:ml-1 border border-gray-500 py-1 px-3 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
          <path fill="#6b6b6b" d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81c1.66 0 3-1.34 3-3s-1.34-3-3-3s-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65c0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92" />
        </svg>
        <h5 class="text-xs md:text-sm text-gray-500">Share</h5>
      </div>
    </div>
    <div>
      <h2 class="excerpt font-normal max-w-lg">{{ description }}</h2>
    </div>
</div>

<!--Articles-->
<main class="my-4 md:mx-14 p-5">
    {{ content | safe }}
</main>
<script src="/js/sharer.js"></script>