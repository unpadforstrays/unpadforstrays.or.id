title: Articles
layout: 'base.njk'
---

<body class="bg-gray-100 dark:bg-stone-800">

<!--Judul-->
<div class="mx-auto ">
	<h2 class="font-prsans text-center mt-8 font-bold md:text-3xl text-3xl pb-1 dark:text-white">Articles</h2>
	<div class="text-center mx-auto">
	<span class="inline-block w-32 h-1 bg-amber-500 rounded-full"></span>
	</div>
</div>

<!--Articles-->
<div class="bg-gray-100 dark:bg-stone-800 m-7 grid max-w-2xl gap-x-6 gap-y-6 sm:mt-5 lg:mx-auto lg:max-w-6xl lg:grid-cols-3">

	{%- for post in collections.post | reverse -%}
	<div class="flex max-w-md flex-col items-start justify-between rounded-2xl border-2 border-gray-500 p-6 dark:border-0 dark:bg-stone-700">
        <div class="flex items-center gap-x-4 text-xs">
          <time datetime="2020-03-16" class="text-gray-500 dark:text-white">{{ post.data.date | postDate }}</time>
          <a href="#" class="relative rounded-full bg-gray-200 px-3 py-1.5 font-medium text-gray-600 active:bg-gray-100">{{post.data.tags}}</a>
        </div>

        <div class="group relative">
          <h3 class="mt-3 text-2xl font-semibold leading-6 text-gray-800 dark:text-white ">
            <a href="{{post.url}}">
              <span class="absolute inset-0"></span>
              {{ post.data.title }}
            </a>
          </h3>
          <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600 dark:text-gray-100">{{ post.data.description }}</p>
        </div>
    </div>

	{%- endfor -%}

	
